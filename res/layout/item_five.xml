<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:background="@color/white"
              android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:layout_height="@dimen/space_1"
                  android:id="@+id/tv_line"
                  android:background="@color/gray_bg"/>

        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/btn_photo" android:background="@color/transparent"
                     android:src="@drawable/btn_house_surface_selector"
                     android:layout_margin="@dimen/space_10"/>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/tv_descrip" android:layout_toRightOf="@+id/btn_photo"
                  android:layout_alignTop="@+id/btn_photo" android:text="车子外观" android:textSize="@dimen/textsize_14"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/tv_descrip_content" android:layout_toRightOf="@+id/btn_photo"
                  android:layout_below="@+id/tv_descrip" android:text="这个车子外观9成新，开了5万公里"
                  android:textColor="@color/gray_text_deep" android:textSize="@dimen/textsize_14"/>
</RelativeLayout>