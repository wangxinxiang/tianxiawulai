<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/space_10"
              android:gravity="center"
              android:background="@color/white">

    <ImageView android:layout_width="60dp"
               android:layout_height="60dp"
               android:id="@+id/img_user_head"
               android:src="@drawable/btn_house_surface_selector"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_10">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_query_name"
                      android:textColor="@color/black"
                      android:textSize="@dimen/textsize_16"
                      android:text="傅旭东"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_query_phone_num"
                      android:textColor="@color/gray_text"
                      android:text="15267309178"
                    android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_query_place"
                      android:text="浙江金华"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/tv_query_money_count"
                      android:text="欠xxx多少钱"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:id="@+id/tv_query_reward_num"
                    android:text="悬赏500元"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:id="@+id/tv_reward_phone"
                    android:layout_weight="1"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/tv_query_over_day"
                    android:text="剩余5天"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>