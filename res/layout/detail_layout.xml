<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="@color/white">

    <include layout="@layout/title_include"></include>

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:focusable="true"
                      android:focusableInTouchMode="true">
           <LinearLayout android:layout_width="match_parent"
                         android:id="@+id/layout_item_three"
                         android:layout_height="wrap_content" android:visibility="gone">
               <include layout="@layout/item_three_new"></include>
           </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/ll_my_loan_detail"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
    </LinearLayout>

    <TextView android:layout_width="match_parent" android:layout_height="@dimen/space_1" android:background="@color/gray_bg"
              android:layout_marginTop="@dimen/space_12"/>

    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/ll_person_detail"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_marginTop="@dimen/space_10">

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:id="@+id/ll_loan_company_detail"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_marginTop="@dimen/space_10">

    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>